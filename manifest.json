{
    "manifest_version" : 2,
    "name": "Instalamb",
    "version": "0.1",

    "description": "Customise Instagram to be the way you want it.",

    "icons": {

    },

    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/*"],
            "js": ["main.js"]
        }
    ],

    "host_permissions": [
        "https://www.instagram.com/*"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "instalamb@flourish.org"
        }
    }
}
